{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 1,
	"name": "cwp/email",
	"title": "Email",
	"category": "gutenberg-forms",
	"ancestor": [ "cwp/block-gutenberg-forms" ],
	"icon": "email",
	"keywords": [
		"email",
		"mail",
		"input",
		"form"
	],
	"version": "1.0.0",
	"textdomain": "forms-gutenberg",
	"attributes": {
		"enableCondition": {
			"type": "boolean",
			"default": false
		},
		"email": {
			"type": "string",
			"default": ""
		},
		"isRequired": {
			"type": "boolean",
			"default": false
		},
		"label": {
			"type": "string",
			"default": "Email"
		},
		"id": {
			"type": "string",
			"default": ""
		},
		"field_name": {
			"type": "string",
			"default": ""
		},
		"requiredLabel": {
			"type": "string",
			"default": "*"
		},
		"messages": {
			"type": "object",
			"default": {
				"empty": "Please fill out this field!",
				"invalidEmail": "The email {{value}} is not valid!"
			}
		},
		"condition": {
			"type": "object",
			"default": {
				"field": null,
				"condition": "===",
				"value": ""
			}
		},
		"adminId": {
			"type": "object",
			"default": {
				"default": "",
				"value": ""
			}
		},
		"prefix": {
			"type": "object",
			"default": {
				"enable": false,
				"content": "",
				"position": "outside"
			}
		},
		"suffix": {
			"type": "object",
			"default": {
				"enable": false,
				"content": "",
				"position": "outside"
			}
		},
		"showHint" :{
			"type": "boolean",
			"default": false
		},
		"hint": {
			"type": "string",
			"default": ""
		}
	}
}
