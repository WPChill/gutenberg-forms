{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 1,
	"name": "cwp/radio",
	"title": "Single Choice",
	"category": "gutenberg-forms",
	"ancestor": [ "cwp/block-gutenberg-forms" ],
	"icon": "marker",
	"keywords": [
		"choice",
		"radio",
		"input",
		"form"
	],
	"version": "1.0.0",
	"textdomain": "forms-gutenberg",
	"example": {},
	"attributes": {
		"enableCondition": {
			"type": "boolean",
			"default": false
		},
		"isRequired": {
			"type": "boolean",
			"default": false
		},
		"options": {
			"type": "array",
			"default": [
				{
					"label": "Option 1"
				},
				{
					"label": "Option 2"
				}
			]
		},
		"label": {
			"type": "string",
			"default": "Choose One"
		},
		"id": {
			"type": "string",
			"default": ""
		},
		"field_name": {
			"type": "string",
			"default": ""
		},
		"messages": {
			"type": "object",
			"default": {
				"empty": "Please select radio!"
			}
		},
		"condition": {
			"type": "object",
			"default": {
				"field": null,
				"condition": "===",
				"value": ""
			}
		},
		"requiredLabel": {
			"type": "string",
			"default": "*"
		},
		"fieldStyle": {
			"type": "string",
			"default": "block"
		},
		"adminId": {
			"type": "object",
			"default": {
				"default": "",
				"value": ""
			}
		},
		"showHint" :{
			"type": "boolean",
			"default": false
		},
		"hint": {
			"type": "string",
			"default": ""
		}
	}
}
