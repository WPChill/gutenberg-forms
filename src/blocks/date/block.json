{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 1,
	"name": "cwp/datepicker",
	"title": "Date",
	"category": "gutenberg-forms",
	"ancestor": [ "cwp/block-gutenberg-forms" ],
	"icon": "calendar-alt",
	"keywords": [
		"date",
		"datepicker",
		"input",
		"form"
	],
	"version": "1.0.0",
	"textdomain": "forms-gutenberg",
	"example": {},
	"attributes": {
		"enableCondition": {
			"type": "boolean",
			"default": false
		},
		"isRequired": {
			"type": "boolean",
			"default": false
		},
		"label": {
			"type": "string",
			"default": "Date"
		},
		"placeholder": {
			"type": "string",
			"default": ""
		},
		"id": {
			"type": "string",
			"default": ""
		},
		"field_name": {
			"type": "string",
			"default": ""
		},
		"format": {
			"type": "string",
			"default": "DD/MM/YYYY"
		},
		"messages": {
			"type": "object",
			"default": {
				"empty": "Please select date!"
			}
		},
		"condition": {
			"type": "object",
			"default": {
				"field": null,
				"condition": "===",
				"value": ""
			}
		},
		"requiredLabel": {
			"type": "string",
			"default": "*"
		},
		"adminId": {
			"type": "object",
			"default": {
				"default": "",
				"value": ""
			}
		},
		"prefix": {
			"type": "object",
			"default": {
				"enable": false,
				"content": "",
				"position": "outside"
			}
		},
		"suffix": {
			"type": "object",
			"default": {
				"enable": false,
				"content": "",
				"position": "outside"
			}
		},
		"showHint" :{
			"type": "boolean",
			"default": false
		},
		"hint": {
			"type": "string",
			"default": ""
		}
	}
}
